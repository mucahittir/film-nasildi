@model WebProgProje.Models.FilmModel.Film

@{
    ViewData["Title"] = "Film Detayları";
}

<h1>Detaylar</h1>

<div>
    <h4>Film</h4>
    <hr />
    <div class=" row">
        <div class="col-md-6">

            <img class="card-img-top" src="@Html.DisplayFor(model => model.ResimUrl)" alt="Card image cap" style="width:350px;height:350px;">
        </div>

        <dl class="row col-md-6">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Baslik)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Baslik)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.YaziGiris)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.YaziGiris)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Etiket)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Etiket)
            </dd>
        </dl>
    </div>
    <br /><br />
    <h3>
        @Html.DisplayNameFor(model => model.Baslik)
    </h3>
    
    <div>
        @Html.DisplayFor(model => model.Yazi)
    </div>

</div>
<div>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model.Id">Düzenle</a>
    }<br />
    <a asp-action="Index">Listeye geri dön</a>
</div>
